<Window x:Class="CSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSV"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="325*"/>
            <RowDefinition Height="109*"/>
        </Grid.RowDefinitions>
        <Label Content="Please enter file path:" HorizontalAlignment="Left" Margin="43,103,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFilePath" HorizontalAlignment="Center" Margin="0,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="416" Height="25"/>
        <Button x:Name="btnProcess" Content="Process" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" Height="48" Width="92" Click="btnProcess_Click" IsEnabled="False"/>
        <ListBox x:Name="lstLines" Margin="0,217,10,0" Grid.RowSpan="2" Height="207" VerticalAlignment="Top" HorizontalAlignment="Right" Width="780"/>
        <Button x:Name="btnSelect" Content="Select" HorizontalAlignment="Left" Margin="634,98,0,0" VerticalAlignment="Top" Height="33" Width="68" Click="btnSelect_Click"/>

    </Grid>
</Window>
